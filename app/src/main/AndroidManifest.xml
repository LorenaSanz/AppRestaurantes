<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.apprestaurantes">

    <!-- Permiso para hacer llamadas y google maps-->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Food Stars"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppRestaurantes">

        <!-- Declaración de SplashActivity como actividad principal -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Declaración de MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- Declaración de NuevoRestauranteActivity -->
        <activity android:name=".NuevoRestauranteActivity" />

        <!-- Declaración de RestaurantesActivity -->
        <activity android:name=".RestaurantesActivity" />

        <!-- Declaración de PreferenciasActivity -->
        <activity android:name=".PreferenciasActivity" />

        <!-- Declaración de AcercaActivity -->
        <activity android:name=".AcercaActivity" />
    </application>

</manifest>
